        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Primary" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="iconTint">@color/icon_tint_selector_shade</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Cross" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="iconTint">@color/icon_tint_selector_cross</item>
